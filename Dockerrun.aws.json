{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "jhcervantes/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "jhcervantes/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "jhcervantes/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "jhcervantes/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "server", "client" ]
    }
  ]
}